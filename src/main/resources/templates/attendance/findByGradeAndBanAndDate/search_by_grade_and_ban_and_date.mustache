{{>layout/header}}
<form action="/gui/attendance/findByGradeAndBanAndDate" method="GET">
    <p>
        <label>
            Start Date Range
            <input type="date" name="startDate">
        </label>
    </p>
    <p>
        <label>
            End Date Range
            <input type="date" name="endDate">
        </label>
    </p>
    <p>
        학년:
        <label>
            <input type="radio" name="grade" value="1" required>
            1
        </label>
        <label>
            <input type="radio" name="grade" value="2" required>
            2
        </label>
        <label>
            <input type="radio" name="grade" value="3" required>
            3
        </label>
    </p>
    <p>
        <label>
            반:
            <input type="number" name="ban" min="1" required>
        </label>
    </p>
    <input type="submit" value="검색">
</form>
<h4>
    How to parse result.
</h4>
<table>
    <tr>
        <th>
            Date Range
        </th>
        <th>
            Grade and Ban
        </th>
        <th>
            Result
        </th>
    </tr>
    <tr>
        <th>
            ◯
        </th>
        <th>
            ◯
        </th>
        <th>
            Search data with date, grade and ban.
        </th>
    </tr>
    <tr>
        <th>
            ◯
        </th>
        <th>
            ✕
        </th>
        <th>
            Search data with grade, ban and today record.
        </th>
    </tr>
</table>
{{>layout/footer}}